{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Backend",
            "type": "shell",
            "command": "pnpm dev-server",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "isBackground": true
        },
        {
            "label": "Start Frontend",
            "type": "shell",
            "command": "pnpm dev",
            "options": {
                "cwd": "${workspaceFolder}/vue3"
            },
            "isBackground": true
        },
        {
            "label": "Start All",
            "group": {
                "kind": "build",
                // "isDefault": true
            },
            "dependsOn": [
                "Start Backend",
                "Start Frontend"
            ],
            "dependsOrder": "parallel"
        }
    ]
}
// 一键启动前后端服务
// 使用说明：ctrl + shift + b